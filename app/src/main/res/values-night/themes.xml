<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TodoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mirage</item>
        <item name="colorPrimaryVariant">@color/cinder</item>
        <item name="colorOnPrimary">@color/ultramarine_blue</item>
        <item name="android:windowBackground">@color/cinder</item>
        <item name="android:textColor">@color/white</item>
        <item name="popupMenuBackground">@color/mirage</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ultramarine_blue</item>
        <item name="colorSecondaryVariant">@color/mirage</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
</resources>